{
  "name": "cr-card-maker",
  "version": "0.0.0",
  "scripts": {
    "dev": "bun run generate-types && vite",
    "dev:public": "bun run dev --host 0.0.0.0",
    "build": "bun run generate-types && tsc && vite build",
    "serve": "vite preview",
    "deploy": "firebase deploy",
    "upgrade-interactive": "ncu -ui",
    "generate-types": "json2ts ./src/templates/\\$schema.json -o ./src/templates/generated/types.ts"
  },
  "dependencies": {
    "cropperjs": "^2.0.1",
    "file-saver": "^2.0.5",
    "firebase": "^12.4.0",
    "idb": "^8.0.3",
    "pwa-helpers": "^0.9.1",
    "sortablejs": "^1.15.6"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/sortablejs": "^1.15.8",
    "firebase-tools": "^14.19.1",
    "json-schema-to-typescript": "^15.0.4",
    "npm-check-updates": "^19.0.0",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-plugin-mkcert": "^1.17.9"
  },
  "packageManager": "bun@1.2.23"
}
